<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_storesearch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:orientation="vertical"
    tools:context=".StoreSearchActivity" >

    <FrameLayout
        android:id="@+id/FrameLayout1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="50" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/common_header" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="35"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10" >
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/fl_store_backbtn"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/common_button" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="10" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="10" >
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="20" >

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:scaleType="centerInside"
                                android:src="@drawable/common_goback" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="10" >
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="120" >

                <com.damy.Utils.AutoSizeTextView
                    android:id="@+id/autoSizeTextView1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/store_search_title"
                    android:textColor="@color/common_header_text"
                    android:textSize="@dimen/common_header_title" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="15" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10" >
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/fl_store_homebtn"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50" >

                    <ImageView
                        android:id="@+id/ImageView01"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/common_button" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="10" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="10" >
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="20" >

                            <ImageView
                                android:id="@+id/ImageView02"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:scaleType="centerInside"
                                android:src="@drawable/common_home" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="10" >
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:background="@color/common_line"
            android:gravity="bottom"
            android:orientation="vertical" >
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="450"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="10"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="160"
                android:background="@drawable/common_white_roundrect"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="170"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="100"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="10" >
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="200" >

                            <com.damy.Utils.AutoSizeEditText
                                android:id="@+id/txt_storesearch_barcode"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="@color/color_white"
                                android:ellipsize="end"
                                android:gravity="left|center_vertical"
                                android:maxLines="1"
                                android:textColor="@color/common_table_view_text"
                                android:textSize="@dimen/common_table_view_size" >

                                <requestFocus />
                            </com.damy.Utils.AutoSizeEditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="10" >
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:orientation="vertical" >
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="10"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="30"
                android:orientation="vertical" >

                <FrameLayout
                    android:id="@+id/fl_storesearch_barcodebtn"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="120" >

                    <ImageView
                        android:id="@+id/ImageView05"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/button_green" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="15"
                            android:orientation="vertical" >
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="60"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="10"
                                android:orientation="vertical" >
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="60"
                                android:orientation="vertical" >

                                <ImageView
                                    android:id="@+id/ImageView06"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/common_code" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="10"
                                android:orientation="vertical" >
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="15"
                            android:orientation="vertical" >
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="10"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="250"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="10" >
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/HorizontalScrollView1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="200" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/common_table_height"
                            android:background="@drawable/table_header_cell" >

                            <FrameLayout
                                android:layout_width="@dimen/table_storesearch_catanum"
                                android:layout_height="fill_parent" >

                                <com.damy.Utils.AutoSizeTextView
                                    android:id="@+id/autoSizeTextView4"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="10"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="@string/common_catalognum"
                                    android:textColor="@color/common_header_text"
                                    android:textSize="@dimen/common_table_header_size" />

                                <LinearLayout
                                    android:layout_width="1px"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="right"
                                    android:background="@color/common_line" >
                                </LinearLayout>
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="@dimen/table_storesearch_storename"
                                android:layout_height="fill_parent" >

                                <com.damy.Utils.AutoSizeTextView
                                    android:id="@+id/AutoSizeTextView06"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="10"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="@string/common_storename"
                                    android:textColor="@color/common_header_text"
                                    android:textSize="@dimen/common_table_header_size" />

                                <LinearLayout
                                    android:layout_width="1px"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="right"
                                    android:background="@color/common_line" >
                                </LinearLayout>
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="@dimen/table_storesearch_cataname"
                                android:layout_height="fill_parent" >

                                <com.damy.Utils.AutoSizeTextView
                                    android:id="@+id/AutoSizeTextView01"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="10"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="@string/common_nongyaoname"
                                    android:textColor="@color/common_header_text"
                                    android:textSize="@dimen/common_table_header_size" />

                                <LinearLayout
                                    android:layout_width="1px"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="right"
                                    android:background="@color/common_line" >
                                </LinearLayout>
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="@dimen/table_storesearch_standard"
                                android:layout_height="fill_parent" >

                                <com.damy.Utils.AutoSizeTextView
                                    android:id="@+id/AutoSizeTextView04"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="10"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="@string/common_standard"
                                    android:textColor="@color/common_header_text"
                                    android:textSize="@dimen/common_table_header_size" />

                                <LinearLayout
                                    android:layout_width="1px"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="right"
                                    android:background="@color/common_line" >
                                </LinearLayout>
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="@dimen/table_storesearch_largenumber"
                                android:layout_height="fill_parent" >

                                <com.damy.Utils.AutoSizeTextView
                                    android:id="@+id/AutoSizeTextView03"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="10"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="@string/common_largenumber"
                                    android:textColor="@color/common_header_text"
                                    android:textSize="@dimen/common_table_header_size" />

                                <LinearLayout
                                    android:layout_width="1px"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="right"
                                    android:background="@color/common_line" >
                                </LinearLayout>
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="@dimen/table_storesearch_quantity"
                                android:layout_height="fill_parent" >

                                <com.damy.Utils.AutoSizeTextView
                                    android:id="@+id/AutoSizeTextView05"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="10"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="@string/common_remainamount"
                                    android:textColor="@color/common_header_text"
                                    android:textSize="@dimen/common_table_header_size" />

                                <LinearLayout
                                    android:layout_width="1px"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="right"
                                    android:background="@color/common_line" >
                                </LinearLayout>
                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical" >

                            <ListView
                                android:id="@+id/anStoreSearchContentView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >
                            </ListView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="10" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="50" >

        <FrameLayout
            android:id="@+id/fl_storemoving_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="100"
            android:background="@color/common_footbutton" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_gravity="top"
                android:background="@color/common_footoutline"
                android:gravity="top"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:background="@color/common_footoutline"
                android:gravity="left"
                android:orientation="horizontal" >
            </LinearLayout>

            <com.damy.Utils.AutoSizeTextView
                android:id="@+id/autoSizeTextView2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/store_moving_title"
                android:textColor="@color/color_white"
                android:textSize="@dimen/common_footer_title" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_storesearch_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="100"
            android:background="@color/common_footbutton_sel" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_gravity="top"
                android:background="@color/common_footoutline"
                android:gravity="top"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:background="@color/common_footoutline"
                android:gravity="left"
                android:orientation="horizontal" >
            </LinearLayout>

            <com.damy.Utils.AutoSizeTextView
                android:id="@+id/txt_item_salecatalog_standardname"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/store_search_title"
                android:textColor="@color/color_white"
                android:textSize="@dimen/common_footer_title" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_storehistory_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="100"
            android:background="@color/common_footbutton" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_gravity="top"
                android:background="@color/common_footoutline"
                android:gravity="top"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:background="@color/common_footoutline"
                android:gravity="left"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:background="@color/common_footoutline"
                android:gravity="right"
                android:orientation="horizontal" >
            </LinearLayout>

            <com.damy.Utils.AutoSizeTextView
                android:id="@+id/AutoSizeTextView02"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/store_history_title"
                android:textColor="@color/color_white"
                android:textSize="@dimen/common_footer_title" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>